<server description="Sample Liberty server">

  <featureManager>
      <feature>microprofile-1.2</feature>
      <feature>mpConfig-1.1</feature>
  </featureManager>

<!-- enables security-->
<quickStartSecurity userName="confAdmin" userPassword="microprofile"/>
<keyStore id="defaultKeyStore" password="mpKeystore"/>
<keyStore id="defaultTrustStore" location="C:\work\microProfileDemo\microservice-gateway\target\liberty\wlp\usr\servers\defaultServer\resources\security\truststore1.jks" password="mpKeystore"/> 

<ssl id="defaultSSLConfig"
     trustStoreRef="defaultTrustStore" clientAuthenticationSupported="true" />
  
  <!-- <httpEndpoint httpPort="9080" httpsPort="9480"
      id="defaultHttpEndpoint" host="*" /> -->
 <httpEndpoint host="*" id="defaultHttpEndpoint" httpsPort="${default.https.port}"
   httpPort="${default.http.port}"/>
  
 <login-config>
    <auth-method>BASIC</auth-method>
 </login-config>
</server>
